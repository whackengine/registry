generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  BigInt          @id @default(autoincrement())
  registeredAt        DateTime        @default(now())
  fullName            String
  githubAccessToken   String
}

