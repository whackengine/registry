generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                          BigInt              @id @default(autoincrement())
  registeredAt                DateTime            @default(now())
  admin                       Boolean             @default(false)
  fullName                    String
  githubAccessToken           String
  receivedMaintenanceInvites  MaintenanceInvite[] @relation("Invitee")
  sentMaintenanceInvites      MaintenanceInvite[] @relation("FromMaintainer") 
  packages                    Package[]
}

model MaintenanceInvite {
  id                  BigInt          @id @default(autoincrement())
  invitee             User            @relation("Invitee", fields: [inviteeId], references: [id])
  inviteeId           BigInt
  fromMaintainer      User            @relation("FromMaintainer", fields: [fromMaintainerId], references: [id])
  fromMaintainerId    BigInt
}

model Package {
  id                  BigInt            @id @default(autoincrement())
  name                String
  maintainers         User[]
  versions            PackageVersion[]
}

model PackageVersion {
  id                  BigInt                   @id @default(autoincrement())
  versionNumber       String
  publishedAt         DateTime                 @default(now())
  zip                 Bytes
  package             Package                  @relation(fields: [packageId], references: [id])
  packageId           BigInt
  dependencies        PackageVersion[]         @relation("Dependency")
  dependents          PackageVersion[]         @relation("Dependency")
  yanked              Boolean                  @default(false)
  downloads           BigInt                   @default(0)
}